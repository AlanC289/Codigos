#include <iostream>
using namespace std;
// Structs
struct Alumno
{
public:
    int cuenta;
    string nombre;      // --> DeclaraciÃ³n de variables
    string ap;
public:
    static void altaAlumno()  // --> Solicita datos en pantalla
    {
        Alumno objeto;
        cout << "# de cuenta ";
        cin >> objeto.cuenta;
        cout << endl;
        cout << "nombre : ";
        cin >> objeto.nombre;
        cout << "ap : ";
        cin >> objeto.ap;
        imprimeDatos(objeto);
    }

    static void imprimeDatos(Alumno objeto)   // --> imprime datos en pantalla
    {
        cout << "Nombre : "
            << objeto.nombre
            << endl;
        cout << "No. cuenta : "
            << objeto.cuenta
            << endl;
    }

};

int main()
{
    Alumno::altaAlumno();
}
